pipeline {
  agent any

  stages {
    stage('Construcción') {
      steps {
        echo "Construcción"
        sh 'mvn -B package'
      }
    }

    stage('Test') {
      steps {
        echo "Test"
        sh 'mvn clean verify'
      }
    }

    stage('SCM') {
      steps {
        checkout scm
      }
    }

    stage('SonarQube Analysis') {
      steps {
        script {
          def mvn = tool 'Default Maven'
          withSonarQubeEnv() {
            sh "${mvn}/bin/mvn clean verify sonar:sonar -Dsonar.projectKey=EjercicioM3-L4 -Dsonar.projectName='EjercicioM3-L4'"
          }
        }
      }
    }
  }
}
